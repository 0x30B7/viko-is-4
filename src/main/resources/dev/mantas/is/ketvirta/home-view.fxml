<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="800.0" spacing="5.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.mantas.is.ketvirta.controller.BaseController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="33.0" prefWidth="760.0" spacing="5.0">
         <children>
            <Button fx:id="addEntryBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="127.0" text="Add Entry" />
            <Button fx:id="saveBtn" mnemonicParsing="false" prefHeight="25.0" prefWidth="127.0" text="Save" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="33.0" prefWidth="760.0" spacing="5.0">
         <children>
            <TextField fx:id="searchField" promptText="Search" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="760.0" VBox.vgrow="ALWAYS">
         <children>
            <TableView fx:id="contentTable" prefHeight="509.0" prefWidth="766.0" VBox.vgrow="ALWAYS">
              <columns>
                <TableColumn fx:id="titleColumn" prefWidth="150.0" text="Title" />
                  <TableColumn fx:id="usernameColumn" prefWidth="165.0" text="Username" />
                <TableColumn fx:id="passwordColumn" prefWidth="197.0" text="Password" />
                  <TableColumn fx:id="actionsColumn" prefWidth="267.0" text="Actions" />
              </columns>
            </TableView>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
